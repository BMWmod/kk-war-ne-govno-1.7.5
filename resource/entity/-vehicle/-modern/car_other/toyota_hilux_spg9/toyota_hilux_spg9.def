			{Size 7 7}
			{weight 500}
			{item "ammo grenade_spg9 cm" 20}
			{item "ammo grenade_spg9 fg" 15}
			)
		}	
	}
	{Weaponry
		{place "gun"
			{weapon "73mm_spg9" filling "ammo grenade_spg9 cm" 1}
			{foresight "foresight1"}
			{basic}
			{charger "gunner"}
			{gunner "gunner"}
		}
	}
	{Chassis
		("CW_wheels"
			Mass(1.5)
			Turnradius(7)
			Power(75)
			Realspeed(100)
			Gamespeed(69) 
